<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".OrderTukangActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/progressBarOrder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BF000000"
        android:translationZ="3dp"
        android:visibility="gone">
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <TextView
        android:id="@+id/locationTextView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lokasi Pekerjaan"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"/>

    <EditText
        android:id="@+id/orderLocationEditText"
        app:layout_constraintTop_toBottomOf="@id/locationTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/detailTextView"
        app:layout_constraintTop_toBottomOf="@id/orderLocationEditText"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Detail Pekerjaan"/>

    <EditText
        android:id="@+id/detailEditText"
        app:layout_constraintTop_toBottomOf="@id/detailTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/putOrderButton"
        app:layout_constraintTop_toBottomOf="@id/detailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order"
        android:layout_margin="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>